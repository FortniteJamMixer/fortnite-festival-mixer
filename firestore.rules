rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(uid) {
      return isSignedIn() && request.auth.uid == uid;
    }

    function isProfileDataValid() {
      return request.resource.data.keys().hasOnly([
        'uid',
        'username',
        'djName',
        'usernameLower',
        'usernameNorm',
        'djNameLower',
        'displayNameLower',
        'searchNameLower',
        'searchTokens',
        'bio',
        'themeAccent',
        'personaId',
        'personaTheme',
        'personaSeed',
        'isPublic',
        'allowFriendRequests',
        'rulesAccepted',
        'rulesAcceptedAt',
        'email',
        'ownedTracks',
        'ownedMap',
        'setlistIds',
        'setlist',
        'setlists',
        'bandMembers',
        'genreOverrides',
        'streamUrl',
        'isLive',
        'liveStartedAt',
        'updatedAt',
        'createdAt',
        'oauth',
        'tour',
        'preferences',
        'avgRating',
        'ratingCount',
        'ratingBreakdown',
        'mode',
        'isAdmin'
      ])
      && request.resource.data.uid == request.auth.uid
      && request.resource.data.username is string
      && request.resource.data.usernameNorm is string
      && request.resource.data.isPublic is bool
      && request.resource.data.allowFriendRequests is bool;
    }

    function isValidFriendEdge() {
      return request.resource.data.keys().hasOnly([
        'friendUid',
        'status',
        'createdAt',
        'updatedAt'
      ])
      && request.resource.data.friendUid is string
      && request.resource.data.friendUid == otherUid
      && request.resource.data.status in ['accepted', 'pending_out', 'pending_in', 'blocked'];
    }

    match /profiles/{uid} {
      allow read: if resource.data.isPublic == true || isOwner(uid);
      allow create, update: if isOwner(uid) && isProfileDataValid();
      allow delete: if isOwner(uid);
    }

    match /users/{uid} {
      allow read: if resource.data.isPublic == true || isOwner(uid);
      allow create, update: if isOwner(uid) && isProfileDataValid();
      allow delete: if isOwner(uid);
    }

    match /usernames/{name} {
      allow read: if true;
      allow create: if isSignedIn()
        && !exists(/databases/$(database)/documents/usernames/$(name))
        && request.resource.data.uid == request.auth.uid;
      allow update, delete: if false;
    }

    match /friends/{uid}/edges/{otherUid} {
      allow read: if isOwner(uid);
      allow create, update: if isSignedIn()
        && (request.auth.uid == uid || request.auth.uid == otherUid)
        && isValidFriendEdge();
      allow delete: if isSignedIn() && (request.auth.uid == uid || request.auth.uid == otherUid);
    }
  }
}
